@import "mixins"

body[theme="dark"]
	theme-dark()

body[theme="gray"]
	theme-gray()

body[theme="light"]
	theme-light()

@media (prefers-color-scheme: no-preference)
	body[theme="auto"]
		theme-light()

@media (prefers-color-scheme: light)
	body[theme="auto"]
		theme-light()

@media (prefers-color-scheme: dark)
	body[theme="auto"]
		theme-dark()
