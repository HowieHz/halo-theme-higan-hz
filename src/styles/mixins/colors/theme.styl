@import "mixins"

html[theme="dark"]
	theme-dark()

html[theme="gray"]
	theme-gray()

html[theme="light"]
	theme-light()

@media (prefers-color-scheme: no-preference)
	html[theme="auto"]
		theme-light()

@media (prefers-color-scheme: light)
	html[theme="auto"]
		theme-light()

@media (prefers-color-scheme: dark)
	html[theme="auto"]
		theme-dark()
