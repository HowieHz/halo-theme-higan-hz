{
  "private": true,
  "type": "module",
  "version": "1.48.3",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm run \"/^watch:.*/\"",
    "watch:vite": "vite build --watch",
    "watch:vite:layout": "vite build --watch --config vite.config.layout.ts",
    "watch:stylus": "stylus ./src/styles/mixins/colors/theme.styl --out ./tmp/styles/ --watch",
    "watch:post-css": "postcss ./src/styles/tailwind.css -o ./tmp/styles/tailwind.css --watch",
    "build": "pnpm run lint:type-check && tw-patch extract && vite build && vite build --config vite.config.layout.ts",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "oxlint --type-aware --fix && eslint --fix",
    "lint:style": "stylelint --fix \"./src/**/*.{css,html}\" \"./docs/.vitepress/**/*.{css,vue}\"",
    "lint:md": "markdownlint \"**/*.md\" --fix",
    "lint:autocorrect": "autocorrect --fix",
    "lint:type-check": "tsgo --noEmit",
    "format": "pnpm run \"/^format:.*/\"",
    "format:stylus": "stylus-supremacy format src/**/*.styl --options .vscode/settings.json -r",
    "format:prettier": "prettier --write \"*.{js,ts,json,yaml,md,jsonc}\" \"./i18n-settings/*.yaml\" \"./src/**/*.{js,ts,css,json,yaml,html}\" \"./plugins/**/*.ts\" \"./docs/**/*.{ts,md,vue,json}\"",
    "prepare": "husky && tw-patch install",
    "docs:dev": "pnpm --filter \"docs\" docs:dev ",
    "docs:build": "pnpm --filter \"docs\" docs:build",
    "docs:preview": "pnpm --filter \"docs\" docs:preview",
    "migrate:oxlint": "pnpm dlx @oxlint/migrate --type-aware --with-nursery && pnpm run format"
  },
  "browserslist": [
    "defaults",
    "Safari >= 16.4",
    "Chrome >= 111",
    "Firefox >= 128"
  ],
  "keywords": [
    "halo",
    "howiehz",
    "halo-theme",
    "halo-theme-higan",
    "halo-theme-higan-hz",
    "halo-theme-higan-haozi"
  ],
  "homepage": "https://howiehz.top/halo-theme-higan-haozi",
  "bugs": {
    "url": "https://github.com/howiehz/halo-theme-higan-hz/issues"
  },
  "author": {
    "name": "HowieHz",
    "url": "https://github.com/howiehz"
  },
  "maintainers": [
    {
      "name": "HowieHz",
      "url": "https://github.com/howiehz"
    }
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/howiehz/halo-theme-higan-hz",
    "type": "git"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@dreamsicle.io/stylelint-config-tailwindcss": "^1.1.2",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@iconify/json": "^2.2.412",
    "@iconify/tailwind4": "^1.2.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/alpinejs": "^3.13.11",
    "@types/node": "^24.10.1",
    "@typescript-eslint/parser": "^8.48.0",
    "@typescript/native-preview": "7.0.0-dev.20251128.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autocorrect-node": "^2.14.0",
    "browserlist": "^1.0.1",
    "browserslist": "^4.28.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-oxlint": "^1.30.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lightningcss": "^1.30.2",
    "markdownlint-cli": "^0.46.0",
    "oxlint": "^1.30.0",
    "oxlint-tsgolint": "^0.8.3",
    "picomatch": "^4.0.3",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.7.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "stylus": "^0.64.0",
    "stylus-supremacy": "^5.0.0",
    "tailwindcss": "^4.1.17",
    "tailwindcss-patch": "^8.4.2",
    "typescript-eslint": "^8.48.0",
    "unplugin-tailwindcss-mangle": "^5.0.0",
    "vite": "npm:rolldown-vite@^7.2.8",
    "vue-eslint-parser": "^10.2.0"
  },
  "dependencies": {
    "alpinejs": "^3.15.2"
  }
}
