{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run \"/^watch:.*/\"",
    "watch:vite": "vite build --watch",
    "watch:stylus": "stylus ./src/styles/mixins/colors/theme.styl --out ./tmp/styles/ --watch",
    "watch:post-css": "postcss ./src/styles/tailwind.css -o ./tmp/styles/tailwind.css --watch",
    "build": "set NODE_ENV=777 && stylus ./src/styles/mixins/colors/theme.styl --out ./tmp/styles/ --compress && tsc && tw-patch extract && vite build && vite build --config vite.config.fragments.ts",
    "lint": "pnpm run \"/^lint:.*/\"",
    "lint:eslint": "oxlint --type-aware --fix && eslint --fix",
    "lint:style": "stylelint --fix \"./src/**/*.css\"",
    "lint:md": "markdownlint \"**/*.md\" --fix",
    "lint:autocorrect": "autocorrect --fix",
    "format": "pnpm run \"/^format:.*/\"",
    "format:stylus": "stylus-supremacy format src/**/*.styl --options .vscode/settings.json -r",
    "format:prettier": "prettier --write \"*.{js,ts,json,yaml,md}\" \"./i18n-settings/*.yaml\" \"./src/**/*.{js,ts,css,json,yaml,html}\" \"./plugins/**/*.ts\" \"./docs/**/*.{ts,md}\"",
    "prepare": "husky && tw-patch install",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs || (vitepress build docs && vitepress preview docs)"
  },
  "browserslist": [
    "defaults",
    "Safari >= 16.4",
    "Chrome >= 111",
    "Firefox >= 128"
  ],
  "keywords": [
    "halo",
    "howiehz",
    "halo-theme",
    "halo-theme-higan",
    "halo-theme-higan-hz",
    "halo-theme-higan-haozi"
  ],
  "homepage": "https://github.com/howiehz/halo-theme-higan-hz#readme",
  "bugs": {
    "url": "https://github.com/howiehz/halo-theme-higan-hz/issues"
  },
  "author": {
    "name": "HowieHz",
    "url": "https://github.com/howiehz"
  },
  "maintainers": [
    {
      "name": "HowieHz",
      "url": "https://github.com/howiehz"
    }
  ],
  "license": "MIT",
  "repository": {
    "url": "https://github.com/howiehz/halo-theme-higan-hz",
    "type": "git"
  },
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@iconify/json": "^2.2.404",
    "@types/alpinejs": "^3.13.11",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autocorrect-node": "^2.14.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-oxlint": "^1.26.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-glob": "^3.3.3",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.45.0",
    "oxlint": "^1.26.0",
    "oxlint-tsgolint": "^0.5.0",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "stylus": "^0.64.0",
    "stylus-supremacy": "^4.0.0",
    "tailwindcss": "^3.4.18",
    "tailwindcss-patch": "^8.2.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "unplugin-tailwindcss-mangle": "^5.0.0",
    "vite": "npm:rolldown-vite@^7.2.1",
    "vite-plugin-purge-icons": "^0.10.0",
    "vitepress": "2.0.0-alpha.12",
    "vitepress-plugin-pagefind": "^0.4.15"
  },
  "dependencies": {
    "@iconify/iconify": "^3.1.1",
    "alpinejs": "^3.15.1"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@^7.2.1"
  }
}