{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:8090/"
      ],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.5}],
        "resource-summary:script:size": ["warn", {"maxNumericValue": 1024000}],
        "resource-summary:stylesheet:size": ["warn", {"maxNumericValue": 512000}],
        "resource-summary:font:size": ["warn", {"maxNumericValue": 512000}],
        "resource-summary:document:size": ["warn", {"maxNumericValue": 204800}],
        "resource-summary:image:size": ["warn", {"maxNumericValue": 1024000}],
        "resource-summary:total:size": ["warn", {"maxNumericValue": 3072000}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
